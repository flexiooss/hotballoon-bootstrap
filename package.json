{
  "name": "hotballoon-bootstrap",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Flexio-corp/hotballoon-bootstrap.git",
  "author": "Thomas Chatelain (https://github.com/TomAchT)",
  "devDependencies": {
    "code-altimeter-js": "https://github.com/flexiooss/code-altimeter-js.git",
    "eslint": "^5.13.0",
    "eslint-plugin-html": "^4.0.1"
  },
  "dependencies": {
    "flexio-jshelpers": "https://github.com/flexiooss/flexio-jshelpers.git",
    "@flexio-oss/assert": "0.0.0",
    "@flexio-oss/hotballoon": "0.1.0-dev",
    "@flexio-oss/global-import-registry": "0.0.0"
  },
  "hotballoon-shed": {
    "build": {
      "builder": "webpack4",
      "entries": [
        "src/main/js/bootstrap.js"
      ],
      "html_template": "src/main/js/index.html",
      "output": "./dist"
    },
    "dev": {
      "server": {
        "host": "ui.flexio.io",
        "proxy": {
          "/api": {
            "target": "https://api.flexio.io",
            "pathRewrite": {
              "^/api": ""
            },
            "secure": true,
            "changeOrigin": true
          }
        }
      }
    },
    "test": {
      "tester": "code-altimeter-js",
      "path": "src/test"
    },
    "modules": {
      "component-bootstrap": "src/main/js/modules/component-bootstrap",
      "component-counter": "src/main/js/modules/component-counter"
    }
  }
}
